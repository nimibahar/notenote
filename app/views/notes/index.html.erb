<div class="wrapper_with_paddings">
  <div id="notes" class="clearfix">
    <% unless @notes.blank? %>
      <% @notes.each do |note| %>
        <%= link_to note_path(note) do %>
          <div class ="note">
            <p class="title"><%= note.title %></p>
            <p class="date"><%= time_ago_in_words(note.created_at) %></p>
          </div>
        <% end  %>
      <% end %>
    <% else %>
      <h2> Add a note </h2>
      <p>It appears you haven't created any notes yet...Lets fix that. Why don't you create a new note below.</p>
      <button><%= link_to "New Note", new_note_path %></button>
    <% end  %>
  </div>
</div>

<%= link_to "New note", new_note_path %>
